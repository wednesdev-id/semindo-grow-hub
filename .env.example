# ===========================================
# SEMINDO Platform - Environment Variables
# ===========================================
# Copy this file to .env and customize values
# cp .env.example .env
#
# This file works for both:
# - Local development (npm run dev)
# - Docker development (docker-compose --profile dev up)
# - Docker production (docker-compose --profile prod up)

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_USER=semindo
DB_PASSWORD=semindo_password_change_me
DB_NAME=semindo_db
DB_PORT=5432

# Full database URL (used by Prisma)
# For local development, use: localhost
# For Docker, change localhost to: db
# Docker Compose will use 'db' as hostname automatically
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:${DB_PORT}/${DB_NAME}

# Google Analytics Configuration
# Ganti dengan Google Analytics Measurement ID Anda
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Security (Optional - uncomment if needed)
# VITE_ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# FEATURE FLAGS
# ===========================================
# Backend feature flags
FEATURE_MARKETPLACE=false
FEATURE_COMMUNITY=true
FEATURE_EXPORT_HUB=true
FEATURE_FINANCING=true

# Frontend feature flags (Vite)
VITE_FEATURE_MARKETPLACE=false
VITE_FEATURE_COMMUNITY=true
VITE_FEATURE_EXPORT_HUB=true
VITE_FEATURE_FINANCING=true