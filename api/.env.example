# Database
DATABASE_URL="postgresql://postgres:semindo_password_change_me@localhost:5432/semindo_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Server
PORT=8080
NODE_ENV="development"

# CORS
ALLOWED_ORIGINS="http://localhost:5174,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_DIR=./uploads/profiles
MAX_FILE_SIZE=5242880

# === PRODUCTION CONFIGURATION (Optional - Uncomment when needed) ===

# Email/SMTP (For email verification, notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@semindo.id

# Payment Gateway (For marketplace)
# MIDTRANS_SERVER_KEY=your-midtrans-server-key
# MIDTRANS_CLIENT_KEY=your-midtrans-client-key
# MIDTRANS_IS_PRODUCTION=false

# Cloud Storage (For file uploads in production)
# AWS_S3_BUCKET=semindo-uploads
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_REGION=ap-southeast-1

# Redis (For caching in production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
